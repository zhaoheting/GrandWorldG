<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.GrandWorldG.mapper.UserInfoMapper">
    <!-- type of resultMap usually is a model customized by developer. -->
    <resultMap id="userInfoModel" type="UserInfo">
        <!-- jdbcType of result is a data type of database. -->
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="last_update_time" property="lastUpdateTime" jdbcType="TIMESTAMP"/>
        <result column="domain_Username" property="domainUsername" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- parameterType of select can be a customized model or a primitive type. -->
    <select id="selectUserInfoByUserId" parameterType="java.lang.Long" resultMap="userInfoModel">
        select user_id,
        username,
        convert_from(decrypt(password::bytea,domain_username::bytea,'aes'),'SQL_ASCII') password,
        create_time,
        last_update_time,
        domain_username
        from travel_fly.user_info
        where user_id = #{userId,jdbcType=BIGINT}
    </select>
    <select id="selectAllUserInfo" resultMap="userInfoModel">
        select user_id,
        username,
        <!--  Show how to use decryption function of postgre's extension pgcrypto.  -->
        convert_from(decrypt(password::bytea,domain_username::bytea,'aes'),'SQL_ASCII') password,
        create_time,
        last_update_time,
        domain_username
        from travel_fly.user_info
    </select>
    <!--  jdbcType must be uppercase.  -->
    <!--  Column name of the primary key doesn't need to be written
    either in the column name or values, unless the key needs to be generated manually.  -->
    <!--  The primary key of postgre database must be defined as "serial" or it can not be generated automatically.  -->
    <insert id="insertUserInfo" keyProperty="userId" parameterType="UserInfo"
            useGeneratedKeys="true">
        insert into travel_fly.user_info
        (username,password,create_time,last_update_time,domain_username)
        values(
        #{username,jdbcType=VARCHAR},
        <!-- Show how to use encryption function of postgre's extension pgcrypto.
        Here we use domain username as secret key.
        Aes is the encryption algorithm. -->
        encrypt(#{password,jdbcType=VARCHAR}::bytea,#{domainUsername}::bytea,'aes'),
        current_timestamp,
        current_timestamp,
        #{domainUsername,jdbcType=VARCHAR}
        )
    </insert>
    <!--    <update id="" parameterType="">-->
    <!--    </update>-->
    <!--    <delete id="" parameterType="">-->
    <!--    </delete>-->
</mapper>